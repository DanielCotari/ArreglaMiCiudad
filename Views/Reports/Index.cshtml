@Model IEnunerable<ArreglaMiCiudad.Models.Report></ArreglaMiCiudad.Models.Report>
@{
    ViewData["Title"] = "Reportes";
}

<h2>Reportes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo reporte</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Category</th>
            <th>Description</th>
            <th>Fecha</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var report in Model)
    {
        <tr>
            <td>@report.ReportId</td>
            <td>@report.Category</td>
            <td>@report.Description</td>
            <td>@report.CreatedAt.ToString("dd/MM/yyyy")</td>
            <td>@report.Status</td>
            <td>
                <a asp-action="Details" asp-route-id="@report.Id" class="btn btn-info btn-sm">Ver</a>
                <a asp-action="Edit" asp-route-id="@report.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Delete" asp-route-id="@report.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
